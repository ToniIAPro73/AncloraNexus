# Configuraci√≥n del Backend de Anclora Converter

# Entorno
FLASK_ENV=development
FLASK_DEBUG=True

# Base de datos
DATABASE_URL=sqlite:///anclora.db
# Para PostgreSQL: postgresql://user:password@localhost/anclora_db

# JWT
JWT_SECRET_KEY=clave-super-secreta-cambiar-en-produccion
JWT_ACCESS_TOKEN_EXPIRES=86400

# Stripe
STRIPE_SECRET_KEY=sk_test_tu_clave_de_stripe
STRIPE_PUBLISHABLE_KEY=pk_test_tu_clave_publica_stripe
STRIPE_WEBHOOK_SECRET=whsec_tu_webhook_secret

# Email
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-app-password

# Almacenamiento
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=524288000

# Redis (opcional)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000
